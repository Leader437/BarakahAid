# ==========================================
# BarakahAid - Docker Compose Environment
# ==========================================
# Copy this file to .env and fill in your values
# Usage: docker-compose --env-file .env up --build
# ==========================================

# ----------------------------------------
# Ports (optional - defaults provided)
# ----------------------------------------
SERVER_PORT=5500
CLIENT_PORT=3000
ADMIN_PORT=3001

# ----------------------------------------
# API URL for Frontend Builds
# ----------------------------------------
VITE_API_URL=https://api.yourdomain.com

# ----------------------------------------
# Database
# ----------------------------------------
DATABASE_URL=postgresql://user:password@host:5432/barakahaid

# ----------------------------------------
# Frontend URLs (for CORS configuration)
# ----------------------------------------
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://admin.yourdomain.com

# ----------------------------------------
# JWT Configuration
# ----------------------------------------
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# ----------------------------------------
# Node Environment
# ----------------------------------------
NODE_ENV=production

# ----------------------------------------
# Cloudinary Configuration
# ----------------------------------------
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ----------------------------------------
# Stripe Configuration
# ----------------------------------------
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_PUBLIC_KEY=pk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ----------------------------------------
# Google OAuth Configuration
# ----------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api.yourdomain.com/api/auth/google/callback
